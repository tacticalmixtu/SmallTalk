<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_nav_contacts">

    <fragment
        android:id="@+id/navigation_nav_recent"
        android:name="edu.syr.smalltalk.ui.message.MessageFragment"
        android:label="@string/bottom_bar_message"
        tools:layout="@layout/fragment_message" />

    <fragment
        android:id="@+id/navigation_nav_contacts"
        android:name="edu.syr.smalltalk.ui.contacts.ContactsFragment"
        android:label="@string/bottom_bar_contacts"
        tools:layout="@layout/fragment_contacts" />

    <fragment
        android:id="@+id/navigation_about_me"
        android:name="edu.syr.smalltalk.ui.profile.ProfileFragment"
        android:label="@string/bottom_bar_about_me"
        tools:layout="@layout/fragment_about_me" />
</navigation>